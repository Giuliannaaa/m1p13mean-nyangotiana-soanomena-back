# od√®le de fichier .env avec exemples de variables requises

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# Si pas d'authentification, utilisez simplement: MONGODB_URI=mongodb://localhost:27017/base_name
# Si authentification requise, utilisez: MONGODB_URI=mongodb://username:password@localhost:27017/base_name
# Si vous utilisez MongoDB Atlas (cloud): MONGODB_URI=mongodb+srv://admin:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/garage_db
MONGODB_URI=mongodb://localhost:27017/ma_base

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d # Token expire dans 7 jours

# Email Configuration (optional - for notifications)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password

# File Upload Configuration (optional)
MAX_FILE_UPLOAD=1000000
FILE_UPLOAD_PATH=./public/uploads